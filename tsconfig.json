{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*", "test/**/*"],
  "watchOptions": {
    "synchronousWatchDirectory": true
  }
}
