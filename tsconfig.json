{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@app/*": ["src/app/*"],
      "@domain/*": ["src/domain/*"],
      "@services/*": ["src/services/*"],
      "@utils": ["src/utils/index"],
      "@graphql/*": ["src/graphql/*"],
      "@servers/*": ["src/servers/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/**/*",
    "src/services/notifications/galoy-admin/.tsoy-admin-client"
  ],
  "watchOptions": {
    "synchronousWatchDirectory": true
  }
}
